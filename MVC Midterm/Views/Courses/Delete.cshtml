@model MVC_Midterm.Models.Course
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this Course ? </h2>
@using (Html.BeginForm("Delete", "Courses"))
{
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Name):
        @Html.DisplayFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Discription):
        @Html.DisplayFor(m => m.Discription)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.TutorName):
        @Html.DisplayFor(m => m.TutorName)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.CourseRating):
        @Html.DisplayFor(m => m.CourseRating)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Course")
</div>



